        <URL value="@/styles/ajouterPartition.css" />
    </stylesheets>
   <children>
      <Label layoutX="71.0" layoutY="27.0" text="Liste des partitions:" />
      <TableView fx:id="listePartitions" focusTraversable="false" layoutX="71.0" layoutY="45.0" prefHeight="179.0" prefWidth="340.0">
        <columns>
          <TableColumn fx:id="colonneNom" prefWidth="75.0" text="Nom" />
          <TableColumn fx:id="colonneAuteur" prefWidth="75.0" text="Auteur" />
        </columns>
