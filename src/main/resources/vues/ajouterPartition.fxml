            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button layoutX="71.0" layoutY="233.0" mnemonicParsing="false" onMouseClicked="#showAjouterPartition" prefHeight="25.0" prefWidth="149.0" text="Ajouter une partition" />
      <Label fx:id="labelNom" layoutX="71.0" layoutY="263.0" text="Nom:" />
      <TextField fx:id="nomPartition" layoutX="71.0" layoutY="280.0" />
